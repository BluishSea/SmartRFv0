<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_btn_test_pressed"/>
        </shape>
    </item>

    <item android:state_selected="true" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_btn_test_ok"/>
        </shape>
    </item>

     <item android:state_selected="false" android:state_enabled="false">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_btn_test_failed"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_btn_test_normal"/>
        </shape>
    </item>

</selector>